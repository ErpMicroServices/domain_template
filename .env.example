# Environment Variables Example for People and Organizations Domain
# Copy this file to .env for development or set these variables in your production environment

# Database Configuration
POSTGRES_DB=people_and_organizations
POSTGRES_USER=people_org_user
POSTGRES_PASSWORD=secure_password_here

# Redis Configuration
REDIS_PASSWORD=secure_redis_password

# OAuth2 Configuration
OAUTH2_CLIENT_ID=your_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
OAUTH2_ISSUER_URI=https://your-oauth2-provider.com/issuer
OAUTH2_AUTHORIZATION_URI=https://your-oauth2-provider.com/oauth/authorize
OAUTH2_TOKEN_URI=https://your-oauth2-provider.com/oauth/token
OAUTH2_USERINFO_URI=https://your-oauth2-provider.com/userinfo
OAUTH2_JWK_SET_URI=https://your-oauth2-provider.com/.well-known/jwks.json

# Application Configuration
API_PORT=8080
ENVIRONMENT=production

# SSL Configuration (if enabled)
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=keystore_password
SSL_KEYSTORE_TYPE=PKCS12

# Cloud Configuration
VAULT_ENABLED=false
VAULT_URI=https://vault.example.com
VAULT_TOKEN=vault_token_here
CONFIG_SERVER_ENABLED=false

# Monitoring and Logging
LOG_LEVEL=INFO
METRICS_ENABLED=true
