# Environment Variables Example for People and Organizations Domain
# Copy this file to .env for development or set these variables in your production environment

# Database Configuration
POSTGRES_DB=people_and_organizations
POSTGRES_USER=people_org_user
POSTGRES_PASSWORD=secure_password_here

# Redis Configuration
REDIS_PASSWORD=secure_redis_password

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# OAuth2/Cognito Configuration
COGNITO_CLIENT_ID=your_cognito_client_id
COGNITO_CLIENT_SECRET=your_cognito_client_secret
COGNITO_ISSUER_URI=https://cognito-idp.region.amazonaws.com/your_user_pool_id

# Application Configuration
API_PORT=8080
ENVIRONMENT=production

# SSL Configuration (if enabled)
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=keystore_password
SSL_KEYSTORE_TYPE=PKCS12

# Cloud Configuration
VAULT_ENABLED=false
VAULT_URI=https://vault.example.com
VAULT_TOKEN=vault_token_here
CONFIG_SERVER_ENABLED=false

# Monitoring and Logging
LOG_LEVEL=INFO
METRICS_ENABLED=true
