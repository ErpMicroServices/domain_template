# Environment Variables Example for People and Organizations Domain
# Copy this file to .env for local development
# Default environment is 'local' - change ENVIRONMENT variable for other profiles (dev, staging, production)

# Database Configuration
POSTGRES_DB=people_and_organizations
POSTGRES_USER=people_org_user
POSTGRES_PASSWORD=secure_password_here

# Redis Configuration
REDIS_PASSWORD=secure_redis_password

# OAuth2 Resource Server Configuration
OAUTH2_ISSUER_URI=http://localhost:8080/realms/master
OAUTH2_JWK_SET_URI=http://localhost:8080/realms/master/protocol/openid-connect/certs

# Keycloak Admin Configuration (for local development)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# Application Configuration
API_PORT=8090
ENVIRONMENT=local

# SSL Configuration (if enabled)
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=keystore_password
SSL_KEYSTORE_TYPE=PKCS12

# Cloud Configuration
VAULT_ENABLED=false
VAULT_URI=https://vault.example.com
VAULT_TOKEN=vault_token_here
CONFIG_SERVER_ENABLED=false

# Monitoring and Logging
LOG_LEVEL=INFO
METRICS_ENABLED=true
